                android:layout_marginLeft="10dp"
                android:fontFamily="sans-serif-black"
                android:text="X"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_pn2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:fontFamily="sans-serif-black"
                android:text="X"
